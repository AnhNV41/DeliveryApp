                    <Image Source="{local:ImageResource DeliveryApp.Resource.user.png}" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="30" Opacity="0.25"/>
                </Frame>
            </StackLayout>
        </Frame>-->
    </StackLayout>
</ContentPage>
